<h1>Submit Post</h1>


<% unless @posts.nil? %>
  <% @posts.each do |p| %>
    <b><%= p.name %> <br></b>
    <%= p.text %> <br><br>
  <% end %>
<% end %>

<%= form_with scope: :post, url: posts_path  do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name%>
  </p>

   <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
     <%= form.submit %>
  </p>

<% end %>
