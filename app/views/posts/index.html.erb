<div class="top-spacer"></div>

<div class="posts">
<% unless @posts.nil? %>
  <% @posts.reverse.each do |p| %>
    <b><%= p.name %> <br></b>
    <%= p.text %> <br><br>
  <% end %>
<% end %>
</div>

<%= form_with scope: :post, url: posts_path  do |form| %>
  <h2>Submit Post</h2>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name%>
  </p>

   <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
     <%= form.submit %>
  </p>

<% end %>
